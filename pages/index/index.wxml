<!--index.wxml-->
<!--导航栏-->
<view class='nav'>
  <view class="newsType" wx:for="{{newstype}}" wx:key="id" style="color:{{item.color}}" bindtap="navbtn_{{item.type}}">{{item.id}}</view>
</view>
<!--横向滑动-->
<swiper class="newstype-content" style="height:{{height}}rpx" bindanimationfinish="contentSwiperFinish" bindchange="swiperChange" current="{{current}}">
  <block wx:for="{{newstype}}" wx:key="id">
    <swiper-item>
      <view class='content'>
        <!--纵向滑动-->
        <scroll-view scroll-y>
          <!--新闻列表-->
          <!--特写-->
          <view class='new-first-backgrand'>
            <image class='new-first' src='/images/news-first.png'></image>
          </view>
          <!--普通-->
          <view class='new-list' wx:for="{{item.news}}" wx:key="id" bindtap="navigatToContent">
            <view class="new-list-left">
              <view class="new-item-title">{{item.title}}</view>
              <view class="new-item-source-time">
                <view class="source">{{item.source}}</view>
                <view class="time">{{item.date}}</view>
              </view>
            </view>
            <image class="new-list-image" src="{{item.firstImage}}">
            </image>
          </view>
          <view class="content-bottom"> 没有更多了</view>
        </scroll-view>
      </view>
    </swiper-item>
  </block>
</swiper>